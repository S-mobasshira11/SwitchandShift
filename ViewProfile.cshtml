@model Switch_and_Shift.Models.USERS

@{
    ViewData["Title"] = "ViewProfile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Saira+Semi+Condensed:wght@300;400;500;600;700&family=Shadows+Into+Light&display=swap"
          rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/css/view_others_profile.css" />

</head>

<body>
    <div class="bs-example">
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <a href="#" class="navbar-brand logo">Switch And Shift</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link">POSTS</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">INBOX</a>
                    </li>


                </ul>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <img src="~/website_images/profile_user.png">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="#" class="dropdown-item">My Profile</a>
                            <div class="dropdown-divider"></div>
                            <a href="/log-out" class="dropdown-item logout" id="log-out">Log Out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

    </div>

    <div class="section2-product-details">
        <div class="container">
            <div class="img_user">
                <img id="img2" alt="" src="~/website_images/profile_user_blue.png" />

            </div>



            <div class="">

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-5">
                                <h6 class="mb-0">User Name :</h6>
                            </div>
                            <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-5">
                                <h6 class="mb-0">User Email :</h6>
                            </div>
                            <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-5">
                                <h6 class="mb-0">Phone Number :</h6>
                            </div>
                            <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.Phone)</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-5">
                                <h6 class="mb-0">User Division :</h6>
                            </div>
                            <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.Location)</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-5">
                                <h6 class="mb-0">User District: :</h6>
                            </div>
                            <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.District)</div>
                        </div>


                    </div>
                </div>


            </div>
            <form>
                <button type="submit" asp-action="Edit" asp-controller="USERS" class="btn btn-warning  edit-button form-group"
                        style="margin-top:30px" asp-route-id=@Model.UserId>
                    Edit Profile
                </button>
            </form>
            

        </div>
    </div>

    <footer style="background-color:#F67576; margin-top:5%;" class="text-center">

        <div class="text-white text-center p-3" style="background-color:#6406B2 ">
            © 2021 Copyright:
            <a class="text-white" href="">All Rights Reserved.</a>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</body>

</html>